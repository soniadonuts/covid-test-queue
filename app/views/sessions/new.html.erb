<h1 class="my-4">Sign In</h1>

<%= form_with url: sign_in_path, local: true do |form| %>
    <div class="mb-3">
        <%= form.label :citizen_id, "Citizen ID:" %><br/>
        <%= form.text_field :citizen_id %>
    </div>

    <div class="mb-3 col-6">
        <%= form.label :password, "Password:" %><br/>
        <%= form.password_field :password %>
    </div>

    <div class="mt-3">
        <%= form.submit "Sign In" %>
    </div>

<% end %>