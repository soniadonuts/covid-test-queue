<div class="card m-5">
  <div class="card-header">
    <strong>Personal Information</strong>
  </div>
  <div class="card-body">
      <div class="row">
        <div class="col">
            <p>
                <strong>Name:</strong>
                <%= Current.user.name %>
            </p>
        </div>

        <div class="col">
            <p>
                <strong>Surname:</strong>
                <%= Current.user.surname %>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <p>
                <strong>Gender:</strong>
                <%= Current.user.gender %>
            </p>
        </div>

        <div class="col">
        <p>
            <strong>Date of birth:</strong>
            <%= Current.user.dob %>
        </p>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <p>
                <strong>Citizen ID:</strong>
                <%= Current.user.citizen_id %>
            </p>
        </div>

        <div class="col">
            <p>
                <strong>Contact number:</strong>
                <%= Current.user.contact_number %>
            </p>
        </div>
    </div>

    <p>
        <strong>Address:</strong>
        <%= Current.user.address %>
    </p>

  </div>
</div>
