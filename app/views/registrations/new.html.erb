<h1 class="my-4">Sign Up</h1>

<%= form_with model: @user, url: sign_up_path, local: true do |form| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger">
            <% @user.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    <% end %>
    <div class="row">
        <div class="mb-3 col-6">
            <%= form.label :name, "Name:", class: "form-label"  %><br/>
            <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3 col-6">
            <%= form.label :surname, "Surname:", class: "form-label"  %><br/>
            <%= form.text_field :surname, class: "form-control" %>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col-6">
            <%= form.label :gender, "Gender:", class: "form-label"  %><br/>
            <%= form.select :gender, ['Male', 'Female', 'Others'], { include_blank: true }, {class: 'form-control'} %>
        </div>

        <div class="mb-3 col-6">
            <%= form.label :dob, "Date of Birth:", class: "form-label"  %><br/>
            <%= form.date_field :dob, max: Date.today, class: 'form-control' %> 
        </div>
    </div>

    <div class="row">
        <div class="mb-3 col-6">
            <%= form.label :citizen_id, "Citizen ID:", class: "form-label"  %><br/>
            <%= form.text_field :citizen_id, class: "form-control" %>
        </div>

        <div class="mb-3 col-6">
            <%= form.label :contact_number, "Contact number:", class: "form-label"  %><br/>
            <%= form.text_field :contact_number, class: "form-control" %>
        </div>
    </div>

        <div class="mb-3">
            <%= form.label :address, "Address:", class: "form-label"  %><br/>
            <%= form.text_area :address, class: "form-control" %>
        </div>

    <div class="row">
        <div class="mb-3 col-6">
            <%= form.label :password, "Password:", class: "form-label"  %><br/>
            <%= form.password_field :password, class: "form-control" %>
        </div>

        <div class="mb-3 col-6">
            <%= form.label :password_confirmation, "Confirm password:", class: "form-label"  %><br/>
            <%= form.password_field :password_confirmation, class: "form-control" %>
        </div>
    </div>
    <div class="mt-3">
        <%= form.submit "Sign Up", class: "btn btn-primary mb-3" %>
    </div>

<% end %>