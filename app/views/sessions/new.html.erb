<div class="">
    <h1 class="my-4">Sign In</h1>

    <%= form_with url: sign_in_path, local: true do |form| %>
        <div class="mb-3 col-4">
            <%= form.label :citizen_id, "Citizen ID:", class: "form-label" %><br/>
            <%= form.text_field :citizen_id, class: "form-control" %>
        </div>

        <div class="mb-3 col-4">
            <%= form.label :password, "Password:", class: "form-label" %><br/>
            <%= form.password_field :password, class: "form-control" %>
        </div>

        <div class="mt-3">
            <%= form.submit "Sign In", class: "btn btn-primary mb-3" %>
        </div>

    <% end %>
</div>